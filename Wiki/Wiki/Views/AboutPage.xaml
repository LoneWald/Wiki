<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wiki.Views.AboutPage"
             xmlns:vm="clr-namespace:Wiki.ViewModels"
             Title="{Binding Title}"
             Style="{StaticResource ContentPageStyle}">

    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#572127</Color>

        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid BackgroundColor="{StaticResource Accent}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <StackLayout Grid.Row="0" Grid.Column="0" Style="{StaticResource IconStyle}">
            <Image Source="icon_about.png"></Image>
            <Label Text="Characters" FontSize="18" ></Label>
        </StackLayout>
        <StackLayout Grid.Row="0" Grid.Column="1" Style="{StaticResource IconStyle}">
            <Image Source="icon_about.png"></Image>
            <Label Text="Items" FontSize="18" ></Label>
        </StackLayout>
        <StackLayout Grid.Row="0" Grid.Column="2" Style="{StaticResource IconStyle}">
            <Image Source="icon_about.png"></Image>
            <Label Text="Classes" FontSize="18" ></Label>
        </StackLayout>

        <StackLayout Grid.Row="1" Grid.Column="0" Style="{StaticResource IconStyle}">
            <Image Source="icon_about.png"></Image>
            <Label Text="Guilds" FontSize="18" ></Label>
        </StackLayout>
        <StackLayout Grid.Row="1" Grid.Column="1" Style="{StaticResource IconStyle}">
            <Image Source="icon_about.png"></Image>
            <Label Text="Settings" FontSize="18" ></Label>
        </StackLayout>

